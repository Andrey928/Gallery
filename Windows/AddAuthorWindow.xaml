<Window x:Class="gallery_mk4.Windows.AddAuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Добавить автора" 
        Height="400" 
        Width="600"
        Background="#F5F5DC"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            
            <Label Content="Имя автора:"/>
            <TextBox Text="{Binding NewAuthor.Name}" Margin="0,0,0,10"/>

           
            <Label Content="Год рождения:"/>
            <TextBox Text="{Binding NewAuthor.BirthYear}" Margin="0,0,0,10"/>

            
            <Label Content="Год смерти"/>
            <TextBox Text="{Binding NewAuthor.DeathYear}"/>
        </StackPanel>

      
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            
            <Button Content="Отмена" 
            Width="100" 
            Height="30"
            Margin="0,0,12,0"
            FontSize="12"
            IsCancel="True"
            Click="CancelButton_Click"
            Background="#F44336"  
            Foreground="White"
            BorderBrush="Transparent"
            BorderThickness="1"
            Cursor="Hand"
            ToolTip="Отменить изменения">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </Button.Resources>
            </Button>

            
            <Button Content="Добавить" 
            Width="100" 
            Height="30"
            FontSize="12"
            Click="SaveButton_Click"
            Background="#4CAF50"
            Foreground="White"
            BorderBrush="#45A049"
            BorderThickness="1"
            Cursor="Hand"
            IsDefault="True"
            ToolTip="Сохранить изменения">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
