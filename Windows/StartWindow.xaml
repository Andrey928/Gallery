<Window x:Class="gallery_mk4.Windows.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gallery_mk4.Windows"
        mc:Ignorable="d"
               Title="Галерея Искусств" Height="500" Width="900"
Background="#F5F5DC">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Добро пожаловать" FontSize="36" FontWeight="Bold"
               HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <Button Content="Вход" 
            Width="200" Height="60"
            Margin="0,0,0,20"
            FontSize="18"
            Click="Enter_Click"
            Background="#4CAF50" Foreground="White"
            BorderBrush="Transparent"
            Cursor="Hand"
            ToolTip="Войти в приложение">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Справка" 
            Width="200" Height="60"
            FontSize="18"
            Click="Spravka_Click"
            Background="#2196F3" Foreground="White"
            BorderBrush="Transparent"
            Cursor="Hand"
            ToolTip="Просмотреть справку">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
