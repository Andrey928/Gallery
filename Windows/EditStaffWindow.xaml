<Window x:Class="gallery_mk4.Windows.EditStaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Редактирование сотрудника" 
        Height="450" 
        Width="500"
        Background="#F5F5DC"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- ФИО -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Должность -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Email -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Телефон -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <!-- Пустое пространство -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопки -->
        </Grid.RowDefinitions>

        <!-- ФИО -->
        <Label Content="ФИО:" Grid.Row="0"/>
        <TextBox Text="{Binding CurrentStaff.FIO, UpdateSourceTrigger=PropertyChanged}" 
                 Grid.Row="1" 
                 Margin="0,0,0,10"/>

        <!-- Должность -->
        <Label Content="Должность:" Grid.Row="2"/>
        <TextBox Text="{Binding CurrentStaff.Position, UpdateSourceTrigger=PropertyChanged}" 
                 Grid.Row="3" 
                 Margin="0,0,0,10"/>

        <!-- Email -->
        <Label Content="Email:" Grid.Row="4"/>
        <TextBox Text="{Binding CurrentStaff.Email, UpdateSourceTrigger=PropertyChanged}" 
                 Grid.Row="5" 
                 Margin="0,0,0,10"/>

        <!-- Телефон -->
        <Label Content="Телефон:" Grid.Row="6"/>
        <TextBox Text="{Binding CurrentStaff.Phone, UpdateSourceTrigger=PropertyChanged}" 
                 Grid.Row="7" 
                 Margin="0,0,0,20"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" 
                    Width="100" 
                    Height="30"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button Content="Сохранить" 
                    Width="100" 
                    Height="30"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>